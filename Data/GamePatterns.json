{
  "version": "1.0",
  "description": "GameSet Pattern Database - Tum oyun ve launcher patternleri",
  "lastUpdated": "2025-01-16",
  
  "common": {
    "ignore_patterns": [
      "*/Temp/*",
      "*/temp/*",
      "*/Cache/*",
      "*/cache/*",
      "*/Logs/*",
      "*/logs/*",
      "*/CrashDumps/*",
      "*/CrashReports/*",
      "*.log",
      "*.tmp",
      "*.temp",
      "*.dmp",
      "*.old",
      "*.backup",
      "*/Downloads/*",
      "*/Windows/Installer/*"
    ],
    
    "critical_patterns": [
      "*/saves/*",
      "*/savegames/*",
      "*/Save/*",
      "*/Profile/*",
      "*/profiles/*",
      "*/Settings/*",
      "*/Config/*",
      "*/config/*",
      "*.ini",
      "*.cfg",
      "*.settings"
    ]
  },
  
  "launchers": {
    "Steam": {
      "displayName": "Steam",
      "executable": "steam.exe",
      "installPath": "E:\\Games\\Steam",
      "identifiers": [
        "steam.exe",
        "steamapps",
        "steam.dll"
      ],
      "critical_folders": [
        {
          "path": "%ProgramFiles(x86)%\\Steam\\userdata",
          "description": "Steam kullanici verileri ve save dosyalari",
          "type": "junction"
        },
        {
          "path": "%ProgramFiles(x86)%\\Steam\\config",
          "description": "Steam konfigurasyon dosyalari",
          "type": "junction"
        },
        {
          "path": "%ProgramData%\\Steam",
          "description": "Steam program verileri",
          "type": "junction"
        }
      ],
      "optional_folders": [
        {
          "path": "%LocalAppData%\\Steam",
          "description": "Steam cache dosyalari",
          "type": "junction"
        }
      ],
      "registry_keys": [
        "HKLM:\\SOFTWARE\\Valve\\Steam",
        "HKLM:\\SOFTWARE\\WOW6432Node\\Valve\\Steam",
        "HKCU:\\SOFTWARE\\Valve\\Steam"
      ],
      "services": [],
      "ignore_folders": [
        "dumps",
        "logs",
        "htmlcache",
        "depotcache",
        "shadercache"
      ]
    },
    
